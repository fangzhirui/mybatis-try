	<context:component-scan base-package="com.sam.practice.restful_logic.dao" />
	<mvc:annotation-driven />
	<aop:aspectj-autoproxy />

	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<bean class="com.sam.practice.restful_logic.interceptor.CharsetInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>

</beans>